---
import SliderAbout from '@components/SliderAbout.astro';
import Layout from '@layouts/Layout.astro';

import jsonData from '@scripts/util/data/infoSliderAbout.json';

// FunciÃ³n helper para construir URLs correctas
function createURL(path: string) {
  const base = import.meta.env.BASE_URL || '/';
  const cleanPath = path.replace(/^\//, '');
  return base.endsWith('/') ? base + cleanPath : base + '/' + cleanPath;
}

const imagenes = jsonData.map((item) => createURL(item.imagen));
const descripcion = jsonData.map((item) => item.descripcion);
---

<Layout title="Acerca de nosotros - Bloom">
  <main class="container mx-auto my-8 h-screen px-4">
    <SliderAbout imagenes={imagenes} descripcion={descripcion} client:load />
  </main>
</Layout>
