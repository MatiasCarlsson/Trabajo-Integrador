---
import Layout from '@layouts/Layout.astro';
import ProductosCard from '@components/ProductCard.astro';
import productos from '@data/productos.json';
---

<Layout>
  <section class="container mx-auto px-4 py-6">
    <div class="flex flex-col gap-6 lg:flex-row">
      <!-- Columna de productos -->
      <div class="w-full rounded border bg-white p-4 shadow lg:w-2/3">
        <h1 class="mb-4 border-b-2 text-xl font-bold md:text-2xl">
          Tu carrito
        </h1>
        <p class="mb-4 text-sm font-normal">2 productos</p>

        <!-- Producto 1 -->
        <div
          class="mb-4 flex flex-col gap-4 border-b pb-4 md:flex-row md:items-center md:gap-6"
        >
          <label class="flex items-center">
            <input type="checkbox" class="cursor-pointer" />
          </label>

          <div class="flex flex-col items-center gap-2 sm:flex-row sm:gap-4">
            <img
              src="https://cdn.omnilife.com/public/uploads/images/products/detail/cosmetica/8911501.png"
              alt="Polvo Traslúcido"
              class="h-20 w-20 object-contain sm:h-24 sm:w-24 md:h-32 md:w-32"
            />
            <div class="flex flex-col gap-2 text-center sm:text-left">
              <h3 class="text-sm font-medium md:text-base">Polvo Traslúcido</h3>
              <button class="text-xs text-blue-600 hover:underline md:text-sm"
                >Eliminar</button
              >
            </div>
          </div>

          <div class="flex flex-col items-center gap-2">
            <span class="text-xs md:text-sm">Cantidad</span>
            <input
              type="number"
              value="1"
              min="1"
              class="w-16 border p-1 text-center text-sm shadow shadow-bloom-accent"
            />
          </div>

          <div class="text-center">
            <span class="text-sm font-bold md:text-base">$25.550</span>
          </div>
        </div>

        <!-- Producto 2 -->
        <div class="flex flex-col gap-4 md:flex-row md:items-center md:gap-6">
          <label class="flex items-center">
            <input type="checkbox" class="cursor-pointer" />
          </label>

          <div class="flex flex-col items-center gap-2 sm:flex-row sm:gap-4">
            <img
              src="https://cdn.omnilife.com/public/uploads/images/products/detail/arg/new/2603201.png"
              alt="Power Maker"
              class="h-20 w-20 object-contain sm:h-24 sm:w-24 md:h-32 md:w-32"
            />
            <div class="flex flex-col gap-2 text-center sm:text-left">
              <h3 class="text-sm font-medium md:text-base">Power Maker</h3>
              <button class="text-xs text-blue-600 hover:underline md:text-sm"
                >Eliminar</button
              >
            </div>
          </div>

          <div class="flex flex-col items-center gap-2">
            <span class="text-xs md:text-sm">Cantidad</span>
            <input
              type="number"
              value="1"
              min="1"
              class="w-16 border p-1 text-center text-sm shadow shadow-bloom-accent"
            />
          </div>

          <div class="text-center">
            <span class="text-sm font-bold md:text-base">$52.430</span>
          </div>
        </div>
      </div>

      <!-- Columna de resumen -->
      <div class="h-min w-full rounded border bg-white p-4 shadow lg:w-1/3">
        <h2 class="mb-4 text-lg font-bold md:text-xl">Resumen de la compra</h2>
        <ul class="mb-4 space-y-2 text-sm md:text-base">
          <li>Polvo Traslúcido: $25.550</li>
          <li>Power Maker: $52.430</li>
        </ul>
        <div class="border-t pt-3">
          <p class="text-lg font-bold md:text-xl">Total: $77.980</p>
          <button
            class="mt-4 w-full rounded bg-bloom-accent py-2 text-sm text-white hover:bg-bloom-deep md:text-base"
          >
            Realizar pedido
          </button>
        </div>
      </div>
    </div>
  </section>

  <ProductosCard productos={productos} limite={8} />
</Layout>
