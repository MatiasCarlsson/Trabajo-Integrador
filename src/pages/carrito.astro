---
import Layout from '@layouts/Layout.astro';
import ProductosCard from '@components/ProductCard.astro';
import productos from '@data/productos.json';
---

<Layout>
  <section class="container mx-auto px-4 py-6">
    <div class="flex flex-row gap-6">
      <!-- Columna de productos -->
      <div class="w-2/3 rounded border bg-white p-4 shadow">
        <h1 class="mb-4 border-b-2 text-2xl font-bold">Tu carrito</h1>
        <p class="mb-4 text-sm font-normal">2 productos</p>

        <div class="mb-4 flex items-center gap-10 space-y-4 border-b pb-4">
          <label for="">
            <input type="checkbox" class="cursor-pointer" />
          </label>
          <article class="flex flex-row items-center justify-center gap-1">
            <img
              src="https://cdn.omnilife.com/public/uploads/images/products/detail/cosmetica/8911501.png"
              alt=""
              class="size-32"
            />
            <span class="-mb-14 cursor-pointer text-blue-600">Eliminar</span>
            <span class="text-md mx-10 -mt-14">Polvo Traslúcido</span>
          </article>

          <div class="flex flex-col items-center gap-2">
            <span class="text-sm">Cantidad</span>
            <input
              type="number"
              value="1"
              min="1"
              class="border text-center shadow shadow-bloom-accent"
            />
          </div>

          <span class="text-md mx-10 -mt-14">$25.550</span>
        </div>
        <div class="flex items-center gap-10 space-y-4">
          <label for="">
            <input type="checkbox" class="cursor-pointer" />
          </label>
          <article class="flex flex-row items-center justify-center gap-1">
            <img
              src="https://cdn.omnilife.com/public/uploads/images/products/detail/arg/new/2603201.png"
              alt=""
              class="size-32"
            />
            <span class="-mb-14 cursor-pointer text-blue-600">Eliminar</span>
            <span class="text-md mx-10 -mt-14">Power Maker</span>
          </article>

          <div class="flex flex-col items-center gap-2">
            <span class="text-sm">Cantidad</span>
            <input
              type="number"
              value="1"
              min="1"
              class="border text-center shadow shadow-bloom-accent"
            />
          </div>

          <span class="text-md mx-10 -mt-14">$52.430</span>
        </div>
      </div>

      <!-- Columna de resumen -->
      <div class="h-min w-1/3 rounded border bg-white p-4 shadow">
        <h2 class="mb-4 text-xl font-bold">Resumen de la compra</h2>
        <ul class="mb-4 space-y-2">
          <li>Polvo Traslúcido: $25.550</li>
          <li>Power Maker: $52.430</li>
        </ul>
        <div class="border-t pt-3">
          <p class="text-xl font-bold">Total: $77.980</p>
          <button
            class="mt-4 w-full rounded bg-bloom-accent py-2 text-white hover:bg-bloom-deep"
          >
            Realizar pedido
          </button>
        </div>
      </div>
    </div>
  </section>

  <ProductosCard productos={productos} limite={9} />
</Layout>
