---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contacto - Bloom">
  <div class="flex min-h-screen w-full justify-center bg-bloom-accent">
    <main class="my-8 w-2/6 px-4">
      <h1 class="mb-6 text-center text-3xl font-bold text-gray-800">
        Contacto
      </h1>
      <p class="mb-6 text-center text-lg text-gray-700">
        Ponte en contacto con nosotros.
      </p>
      <form
        class="rounded-2xl border border-white/30 bg-white/20 p-8 shadow-lg backdrop-blur-xl backdrop-saturate-150"
      >
        <div class="mb-6">
          <label for="nombre" class="mb-2 block font-medium text-gray-700"
            >Nombre</label
          >
          <input
            type="text"
            id="nombre"
            name="nombre"
            class="w-full rounded-lg border border-white/40 bg-white/30 p-3 placeholder-gray-500 backdrop-blur-sm focus:outline-none focus:ring-2 focus:ring-blue-400"
            placeholder="Nombre"
            required
          />
        </div>
        <div class="mb-6">
          <label for="phone" class="mb-2 block font-medium text-gray-700"
            >Teléfono</label
          >
          <input
            type="tel"
            id="phone"
            name="phone"
            placeholder="Número de teléfono"
            class="w-full rounded-lg border border-white/40 bg-white/30 p-3 placeholder-gray-500 backdrop-blur-sm focus:outline-none focus:ring-2 focus:ring-blue-400"
            required
          />
        </div>
        <div class="mb-6">
          <label for="mensaje" class="mb-2 block font-medium text-gray-700"
            >Mensaje</label
          >
          <textarea
            id="mensaje"
            rows="4"
            class="w-full rounded-lg border border-white/40 bg-white/30 p-3 placeholder-gray-500 backdrop-blur-sm focus:outline-none focus:ring-2 focus:ring-blue-400"
            required></textarea>
        </div>
        <div class="flex justify-center">
          <button
            type="submit"
            class="rounded-lg bg-gradient-to-r from-blue-400 to-purple-500 px-8 py-3 text-white shadow-md backdrop-blur-sm transition-all hover:translate-y-[-2px] hover:shadow-lg"
          >
            Enviar
          </button>
        </div>
      </form>
    </main>
  </div>
</Layout>
