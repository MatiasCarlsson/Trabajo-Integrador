---
import bloomLogo from '/public/img/bloom_logo.jpg';
import CarritoCompra from './icons/CarritoCompra.astro';
---

<header
  class="[background: linear-gradient( 360deg, rgba(240, 236, 229, 1) 0%, rgb(191, 164, 192, 1) 100% );] sticky top-0 z-50 w-full shadow-sm"
>
  <!-- Header principal -->
  <div class="flex items-center gap-2 p-4 pr-6 md:gap-4">
    <!-- Logo -->
    <div class="flex flex-shrink-0 items-center">
      <a href="/" class="flex items-center">
        <img
          src={bloomLogo.src}
          alt="Logo Bloom"
          width="48"
          height="48"
          class="h-8 w-8 rounded-full border-2 border-bloom-deep sm:h-10 sm:w-10 md:h-12 md:w-12"
        />
      </a>
    </div>

    <!-- Barra de búsqueda - Ocupa todo el espacio disponible -->
    <form class="mx-3 flex-1">
      <label for="search" class="sr-only">Buscar productos</label>
      <input
        type="text"
        id="search"
        placeholder="Buscar..."
        class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-bloom-accent focus:outline-none focus:ring-1 focus:ring-bloom-accent md:text-base"
      />
    </form>

    <!-- Navegación - Desktop (adaptativa) -->
    <nav
      class="hidden sm:flex sm:items-center sm:gap-2 md:gap-3 lg:gap-4 xl:gap-6"
    >
      <a
        href="/"
        class="whitespace-nowrap text-xs font-medium transition-colors hover:text-bloom-primary sm:text-sm lg:text-base"
      >
        Inicio
      </a>
      <a
        href="/productosBox"
        class="whitespace-nowrap text-xs font-medium transition-colors hover:text-bloom-primary sm:text-sm lg:text-base"
      >
        Productos
      </a>
      <a
        href="/acercaDeNosotros"
        class="whitespace-nowrap text-xs font-medium transition-colors hover:text-bloom-primary sm:text-sm lg:text-base"
      >
        Acerca
      </a>
      <a
        href="/listadoTabla"
        class="whitespace-nowrap text-xs font-medium transition-colors hover:text-bloom-primary sm:text-sm lg:text-base"
      >
        Tabla
      </a>
      <a
        href="/contacto"
        class="whitespace-nowrap text-xs font-medium transition-colors hover:text-bloom-primary sm:text-sm lg:text-base"
      >
        Contacto
      </a>
    </nav>

    <!-- Botón menú hamburguesa - Solo móviles -->
    <button
      id="menu-toggle"
      class="ml-2 flex size-8 items-center justify-center rounded-md transition-colors hover:bg-white/20 sm:hidden"
      aria-label="Abrir menú"
    >
      <svg
        class="h-5 w-5"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>

    <!-- Carrito - Siempre a la derecha -->
    <a
      href="/carrito"
      class="ml-2 flex size-8 items-center justify-center rounded-lg transition-colors hover:bg-white/20 sm:size-10"
      aria-label="Ver carrito"
    >
      <CarritoCompra />
    </a>
  </div>

  <!-- Menú móvil - Solo para móviles pequeños -->
  <nav
    id="mobile-menu"
    class="hidden border-t border-white/20 bg-white/10 backdrop-blur-sm sm:hidden"
  >
    <div class="flex flex-col py-2">
      <a
        href="/"
        class="block px-4 py-3 text-sm font-medium transition-colors hover:bg-black/20"
      >
        Inicio
      </a>
      <a
        href="/productosBox"
        class="block px-4 py-3 text-sm font-medium transition-colors hover:bg-white/20"
      >
        Productos
      </a>
      <a
        href="/acercaDeNosotros"
        class="block px-4 py-3 text-sm font-medium transition-colors hover:bg-white/20"
      >
        Acerca de Nosotros
      </a>
      <a
        href="/listadoTabla"
        class="block px-4 py-3 text-sm font-medium transition-colors hover:bg-white/20"
      >
        Lista en Tabla
      </a>
      <a
        href="/contacto"
        class="block px-4 py-3 text-sm font-medium transition-colors hover:bg-white/20"
      >
        Contacto
      </a>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');

    if (menuToggle && mobileMenu) {
      menuToggle.addEventListener('click', function () {
        const isHidden = mobileMenu.classList.contains('hidden');

        if (isHidden) {
          mobileMenu.classList.remove('hidden');
          menuToggle.setAttribute('aria-label', 'Cerrar menú');
          // Cambiar icono a X
          menuToggle.innerHTML = `
            <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          `;
        } else {
          mobileMenu.classList.add('hidden');
          menuToggle.setAttribute('aria-label', 'Abrir menú');
          // Cambiar icono a hamburguesa
          menuToggle.innerHTML = `
            <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          `;
        }
      });

      // Cerrar menú cuando se hace clic en un enlace
      const mobileLinks = mobileMenu.querySelectorAll('a');
      mobileLinks.forEach((link) => {
        link.addEventListener('click', () => {
          mobileMenu.classList.add('hidden');
          menuToggle.setAttribute('aria-label', 'Abrir menú');
          menuToggle.innerHTML = `
            <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          `;
        });
      });
    }
  });
</script>
