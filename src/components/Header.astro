---
import bloomLogo from '/public/img/bloom_logo.jpg';
import CarritoCompra from './icons/CarritoCompra.astro';
---

<header
  class="[background: linear-gradient( 360deg, rgba(240, 236, 229, 1) 0%, rgb(191, 164, 192, 1) 100% );] z-10 flex w-full items-center justify-between p-4"
>
  <div
    class="size-12 items-end justify-end gap-x-3 overflow-hidden rounded-full bg-bloom-primary"
  >
    <a href="" class="">
      <img src={bloomLogo.src} alt="Logo" />
    </a>
  </div>

  <form class="mx-auto max-w-md items-center">
    <label for="search" class="sr-only"></label>
    <input
      type="text"
      id="search"
      placeholder="Buscar..."
      class="w-96 rounded-md border border-gray-300 p-2"
    />
  </form>

  <nav class="flex items-center justify-center gap-10 p-1">
    <a href="/"> Inicio </a>
    <a href="/productosBox"> Productos </a>
    <a href="/acercaDeNosotros"> Acerca de nosotros </a>
    <a href="/listadoTabla"> Lista en Tabla </a>
    <a href="/contacto"> Contacto </a>
    <a href="/carrito" class="mr-10items-center size-9">
      <CarritoCompra />
    </a>
  </nav>
</header>
