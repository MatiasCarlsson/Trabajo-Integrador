---
import productos from '@data/productos.json';

// Seleccionamos solo 6 productos para mostrar en la cuadrícula
const productosDestacados = productos.slice(0, 6);
---

<section class="container mx-auto my-8 px-4 md:my-12">
  <h2
    class="mb-6 text-center text-2xl font-bold text-bloom-primary md:text-3xl"
  >
    Productos Destacados
  </h2>

  <div
    class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:gap-6 lg:grid-cols-3 lg:gap-8"
  >
    {
      productosDestacados.map((producto) => (
        <div class="hover:scale-102 flex h-full flex-col overflow-hidden rounded-lg border border-gray-200 bg-white shadow-md transition-transform hover:shadow-lg">
          <div class="flex h-48 items-center justify-center bg-gray-50 p-3 md:h-64 md:p-4">
            <img
              src={producto.imagen}
              alt={producto.nombre}
              class="max-h-full object-contain"
            />
          </div>

          <div class="flex flex-grow flex-col p-3 md:p-4">
            <h3 class="mb-2 text-lg font-semibold md:text-xl">
              {producto.nombre}
            </h3>
            <p class="line-clamp-2 flex-grow text-xs text-gray-600 md:text-sm">
              {producto.descripcion?.substring(0, 80) ||
                'Producto natural Seytú para el cuidado personal'}
              ...
            </p>
            <div class="mt-3 flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between md:mt-4">
              <span class="text-base font-bold text-bloom-primary md:text-lg">
                ${producto.precio?.toLocaleString('es-AR')}
              </span>
              <a
                href={`/Trabajo-Integrador/productos/${producto.nombre?.toLowerCase().replace(/ /g, '-')}`}
                class="rounded bg-bloom-accent px-3 py-1.5 text-center text-xs text-white transition hover:bg-bloom-deep md:px-4 md:py-2 md:text-sm"
              >
                Ver detalles
              </a>
            </div>
          </div>
        </div>
      ))
    }
  </div>

  <!-- Sección de Combos -->
  <div class="mt-12 md:mt-16">
    <h2
      class="mb-6 text-center text-xl font-bold text-bloom-primary md:text-2xl"
    >
      Combos Recomendados
    </h2>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-3 md:gap-6">
      <div
        class="rounded-lg border border-gray-200 bg-white p-4 text-center shadow-md"
      >
        <h3 class="mb-2 text-lg font-semibold md:text-xl">
          Combo Belleza Natural
        </h3>
        <p class="text-sm text-gray-600 md:text-base">
          Los mejores productos para tu rutina facial diaria
        </p>
        <a
          href="/Trabajo-Integrador/productos/combo-belleza-natural"
          class="mt-3 inline-block text-sm text-bloom-accent hover:underline md:text-base"
        >
          Ver combo
        </a>
      </div>

      <div
        class="rounded-lg border border-gray-200 bg-white p-4 text-center shadow-md"
      >
        <h3 class="mb-2 text-lg font-semibold md:text-xl">
          Combo Bienestar Total
        </h3>
        <p class="text-sm text-gray-600 md:text-base">
          Complementos para mejorar tu salud y vitalidad
        </p>
        <a
          href="/Trabajo-Integrador/productos/combo-bienestar-total"
          class="mt-3 inline-block text-sm text-bloom-accent hover:underline md:text-base"
        >
          Ver combo
        </a>
      </div>

      <div
        class="rounded-lg border border-gray-200 bg-white p-4 text-center shadow-md"
      >
        <h3 class="mb-2 text-lg font-semibold md:text-xl">
          Combo Cuidado Premium
        </h3>
        <p class="text-sm text-gray-600 md:text-base">
          La mejor selección de productos premium
        </p>
        <a
          href="/Trabajo-Integrador/productos/combo-cuidado-premium"
          class="mt-3 inline-block text-sm text-bloom-accent hover:underline md:text-base"
        >
          Ver combo
        </a>
      </div>
    </div>
  </div>
</section>
