{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@data/*": ["src/data/*"],
      "@styles/*": ["src/styles/*"],
      "@public/*": ["public/*"],
      "@scripts/*": ["src/scripts/*"],
      "@lib/*": ["src/lib/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
